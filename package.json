{
  "name": "letrans-application",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "axios": "^0.21.1",
    "enzyme": "^3.11.0",
    "i18next": "^19.8.5",
    "node-sass": "^4.14.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.8.5",
    "react-notifications-component": "^3.0.3",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3",
    "copyfiles": "^2.4.1",
    "cpy-cli": "^3.1.1",
    "move-cli": "^1.2.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/react-notifications-component": "^2.4.0",
    "@types/react-router-dom": "^5.1.7",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "react-router-dom": "^5.2.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0"
  },
  "scripts": {
    "test": "react-scripts test",
    "start": "react-scripts start",
    "lint": "./node_modules/tslint/bin/tslint -c tslint.json src/**/*.{ts,tsx} --fix --format verbose",
    "build": "react-scripts build && npm run copy-htaccess && npm run delete-build && npm run copy-build",
    "delete-build": "del-cli --force ./../public_html",
    "copy-htaccess": "copyfiles .htaccess ./build/",
    "copy-build": "move-cli --md ./build ./../public_html"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test -- --watchAll=false"
    }
  }
}
